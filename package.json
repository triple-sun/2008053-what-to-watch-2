{
  "name": "what-to-watch",
  "version": "1.0.0",
  "description": "Проект «Что посмотреть» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./src/main.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/convict-format-with-validator": "^6.0.2",
    "@types/node": "^16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-htmlacademy": "^5.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "type": "module",
  "engines": {
    "node": "^16.13.0",
    "npm": "^8.1.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "convict": "^6.2.3",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.5",
    "dotenv": "16.0.2",
    "got": "^12.4.1",
    "inversify": "^6.0.1",
    "json-server": "^0.17.0",
    "pino": "^8.5.0",
    "pino-pretty": "^9.1.0",
    "reflect-metadata": "^0.1.13"
  }
}
